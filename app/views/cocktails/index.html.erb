<div class="btn btn-success"><%= link_to "Create your own Cocktail", new_cocktail_path %></div>

<div class="container text-center">
  <h1> All our Cocktails </h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4 col-xs-12 p-0">
        <div class="d-flex">
          <div class="card m-4 text-center">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag(cocktail.photo.key, height: 300, crop: :fill) %>
            <% else %>
              <img src="<%= cocktail.image_url %>" alt="...">
            <% end %>
            <p class="cocktail_name w-100" >
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

